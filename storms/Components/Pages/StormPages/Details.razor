@page "/storms/details"
@using Microsoft.EntityFrameworkCore
@using storms.Models
@inject IDbContextFactory<Storms.Data.StormContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Storm</h2>
    <hr />
    @if (storm is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@storm.Id</dd>
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@storm.Name</dd>
            <dt class="col-sm-2">LandfallDates</dt>
            <dd class="col-sm-10">@storm.LandfallDate</dd>
            <dt class="col-sm-2">MaxWindSpeed</dt>
            <dd class="col-sm-10">@storm.MaxWindSpeed</dd>
        </dl>
        <div>
            @* <a href="@($"/storms/edit?id={storm.Id}")">Edit</a> | *@
            <a href="@($"/storms")">Back to List</a>
        </div>
    }
</div>

@code {
    private Storm? storm;

    [SupplyParameterFromQuery]
    private string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        storm = await context.Storm.FirstOrDefaultAsync(m => m.Id == Id);

        if (storm is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
